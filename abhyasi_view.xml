		<record model='ir.ui.view' id='visitor_abhyasi_tree'>
            <field name="name">visitor.abhyasi.tree</field>
            <field name="model">visitor.abhyasi</field>
            <field name="arch" type="xml">
                <tree string="Roles" editable="bottom">
