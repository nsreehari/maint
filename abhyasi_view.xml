								<field name="full_name" />
								<field name="preceptor" />
                                <field name="overseas" />
                                <field name="center" />
                            </group>
                            <group>
								<field name="country" />
							    <field name="contactnumber" />
							    <field name="birthyear" />
							    <field name="gender" />
							    <field name="identificationdoc" />                                
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
